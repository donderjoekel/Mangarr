<div class="modal fade" id="delete-manga-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete manga</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this manga?</p>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="delete-manga-checkbox" @onchange="ToggleDeleteChaptersFromDisk">
                    <label class="form-check-label" for="delete-manga-checkbox">
                        Delete chapters from disk
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick="OnDeleteClick">Delete</button>
            </div>
        </div>
    </div>
</div>
