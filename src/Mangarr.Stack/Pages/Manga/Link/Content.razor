<div id="wrapper" class="overflow-auto p-4">
    <div class="mb-4">
        <form class="border rounded p-2">
            <p class="lead">Advanced</p>
            <input class="form-control mt-2 mb-3" type="text" @oninput="SearchQueryChanged" placeholder="Custom search query"/>
            <a class="btn btn-primary" @onclick="SubmitCustomSearch">Submit</a>
        </form>
    </div>

    @if (_sources.Count == 0)
    {
        <p class="lead">Please enable at least one source in the settings</p>
    }
    else
    {
        foreach (SourceDocument source in _sources)
        {
            <ContentSource Source="@source" SearchId="@SearchId"/>
        }
    }
</div>
