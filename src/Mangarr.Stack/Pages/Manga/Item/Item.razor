@page "/manga/{Id}"

<div id="toolbar" class="d-flex justify-content-between flex-shrink-0 flex-grow-0">
    <div id="toolbar-left" class="ms-3 d-flex">
        <button href="#" class="btn h-100" type="button">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icon-tabler-refresh fs-2">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M20 11a8.1 8.1 0 0 0 -15.5 -2m-.5 -4v4h4"></path>
                <path d="M4 13a8.1 8.1 0 0 0 15.5 2m.5 4v-4h-4"></path>
            </svg>
        </button>
        <div class="border border-1 mt-3 mb-3"></div>
        <button class="btn h-100" type="button" data-bs-toggle="modal" data-bs-target="#delete-manga-modal">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-trash fs-2" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
            </svg>
        </button>
        @* TODO: Add a button to change root folder *@
    </div>
</div>

<div id="wrapper" class="overflow-auto d-flex flex-column">
    <ContentHeader Id="@Id"/>
    <ContentList Id="@Id"/>
</div>

<div class="modal fade" id="delete-manga-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete manga</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this manga?</p>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="delete-manga-checkbox" @onchange="ToggleDeleteChaptersFromDisk">
                    <label class="form-check-label" for="delete-manga-checkbox">
                        Delete chapters from disk
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick="OnDeleteClick">Delete</button>
            </div>
        </div>
    </div>
</div>
